{
    "compilerOptions": {
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "CommonJS",
      "target": "es5",
      "jsx": "react",
      "allowJs": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "**/*.ts"
    ],
    "files": [
      "server.ts"
    ]
  }
  